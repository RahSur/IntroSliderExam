<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f64c73"
android:gravity="center"
android:orientation="vertical">

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:src="@drawable/waterheater" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Water Heater"
    android:textAlignment="center"
    android:textColor="@android:color/white"
    android:textSize="30dp"
    android:textStyle="bold" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="Normal Mode "
    android:fontFamily="serif-monospace"
    android:textStyle="bold"
    android:layout_marginLeft="10dp"
    android:textColor="@android:color/white"
    android:textSize="22dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="          This mode allows you to control all your devices globally and your ca monitor the usage through the home display."
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:textSize="15dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ECO Mode "
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:fontFamily="serif-monospacemonospace"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="          In this mode you can make use of the timer functionality and set timer for the heater for automatic cutoff"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

</LinearLayout>